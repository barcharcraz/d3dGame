#ifndef GLSL_LIGHT_STRUCTS_H
#define GLSL_LIGHT_STRUCTS_H
struct pointLight_t {
    vec4 diffuse;
    vec4 specular;
    vec4 position;
};
struct directionalLight_t {
    vec4 diffuse;
    vec4 specular;
    vec4 direction;
};
struct material_t {
    vec4 ambiant;
    vec4 diffuse;
    vec4 specular;
    float shine;
};

#endif
